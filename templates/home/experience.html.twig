{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}

 <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option spad set-bg" style="background-image:url('{{ asset('build/images/fondroselight.jpg') }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Expérience professionnelle</h2>
                        <a href="{{ path('home') }}">Home</a>
                        <span>Expérience</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Services Section Begin -->
    <section class="services spad set-bg" data-setbg="img/services-bg.jpg">
        <div class="container">

            <div class="row">
            {% for experience in experiences %}
                <div class="col-lg-6 col-md-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <span class="flaticon-044-aesthetic"></span>
                        </div>
                        <div class="services__item__text">
                            <h3>{{ experience.Title }}</h3>
                            <p>Du {{ experience.StartDate ? experience.StartDate|date('Y-m-d') : '' }} au {{ experience.EndDate ? experience.EndDate|date('Y-m-d') : '' }}</p>
                            <h5>{{ experience.Employer }}</h5>
                            <p>{{ experience.Description }}</p>
                        </div>
                    </div>
                </div>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}

            </div>
        </div>
    </section>
    <!-- Services Section End -->

{% endblock %}

