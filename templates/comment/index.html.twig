{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
 
<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option spad set-bg" style="background-image:url('{{ asset('build/images/fondroselight.jpg') }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Commentaires</h2>
                        <a href="{{ path('home') }}">Home</a>
                        <span>Tous les commentaires</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

   <!-- Blog Details Section Begin -->
    <section class="blog-details spad">
        <div class="container">                          
        
                    <div class="blog__details__related">
                        <h3>Commentaires</h3>
                        <div class="row">
                        {% for comment in comments %}
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="blog__item">
                                    <div class="blog__item__pic">
                                        <img src="img/blog/blog-8.jpg" alt="">
                                    </div>
                                    <div class="blog__item__text">
                                        <h5>{{ comment.title }}</h5>
                                        <h5>{{ comment.textComment }}</h5>                                      
                                        <span>par {{ comment.pseudo }} le {{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</span>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </div>
                    </div>
                    <a href="{{ path('article_index') }}">Retour aux articles</a>
                        {% if is_granted('ROLE_ADMIN') %}
{#                         <a href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                        <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a> #}
                        <a href="{{ path('comment_new') }}">Create new</a>
                        {% endif %}                                
            </div>
        </div>
    </section>  

{% endblock %}
